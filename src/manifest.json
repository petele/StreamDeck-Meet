{
  "name": "StreamDeck-Meet",
  "version": "0.87",
  "description": "StreamDeck helper for Google Meet",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": [
        "CanvasToBMP.js",
        "StreamDeck.js",
        "StreamDeckMini.js",
        "StreamDeckV1.js",
        "StreamDeckV2.js",
        "StreamDeckXL.js",
        "PikateaMacropadGB4.js",
        "MeetWrapper.js",
        "main.js"
      ]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["ico-svg/*"],
    "matches": ["https://meet.google.com/*"]
  }]
}
